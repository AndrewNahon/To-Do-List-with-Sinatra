<ul id="lists">
  <% sort_lists(@lists) do |list, index| %>
    <li class="<%=list_class(list) %>">
      <a href="/lists/<%=index%>">
        <h2><%= list[:name] %></h2>
        <p><%= num_completed_todos(list) %> / <%= list[:todos].size %></p>
      </a>
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a class="add" href="/lists/new">New lists</a>
<% end %>